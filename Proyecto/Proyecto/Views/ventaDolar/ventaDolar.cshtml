<script type="text/javascript">

      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

function drawChart() {
    var i = 0;
    var fecha = @Html.Raw(Json.Encode(@ViewBag.FechaInicio));
    var valor = @Html.Raw(Json.Encode(@ViewBag.Valor));
    var fechavista = [];
    var valorvista = [];

    for (i = 0; i < fecha.length; i++)
    {
        fechavista = fecha[i];
        //fechavista[i] = fecha[i];
    }

    for (i = 0; i < valor.length; i++)
    {
        valorvista = valor[i];
        //valorvista[i] = valor[i];
    }

    var data = google.visualization.arrayToDataTable([
        ['Año', 'Valor'],
        [fechavista,  valorvista]
    ]);

    var options = {
        title: 'Company Performance',
        curveType: 'function',
        legend: { position: 'bottom' }
    };

    var chart = new google.visualization.LineChart(document.getElementById('GraficaLineal'));

    chart.draw(data, options);
    }

</script>
</html>
